---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/home.css';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const highlights = [
	'Interfaces rápidas e acessíveis',
	'Sistemas de design enxutos',
	'Construção com Astro e React'
];

const services = [
	{
		title: 'Design & UI',
		description: 'Experiências digitais com foco em clareza, contraste e navegação direta.'
	},
	{
		title: 'Front-end',
		description: 'Código limpo, modular e otimizado para performance real.'
	},
	{
		title: 'Lançamentos',
		description: 'Páginas e produtos prontos para crescer com conteúdo e SEO.'
	}
];

const projects = [
	{
		title: 'Aurora Commerce',
		detail: 'E-commerce headless com checkout otimizado.'
	},
	{
		title: 'Nimbus Studio',
		detail: 'Landing page modular para SaaS.'
	},
	{
		title: 'Atlas Insights',
		detail: 'Dashboard de dados para decisões rápidas.'
	}
];
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="home">
			<section class="hero">
				<div>
					<p class="eyebrow">Portfólio minimalista</p>
					<h1>Design preto e branco para produtos que precisam de foco.</h1>
					<p class="summary">
						Eu crio interfaces rápidas, minimalistas e diretas. Menos ruído, mais clareza.
					</p>
					<div class="cta">
						<a class="button primary" href="/about">Ver portfólio</a>
						<a class="button ghost" href="#contato">Falar comigo</a>
					</div>
				</div>
				<ul class="highlight-list">
					{highlights.map((item) => (
						<li>{item}</li>
					))}
				</ul>
			</section>

			<section class="section">
				<h2>Serviços</h2>
				<div class="card-grid">
					{services.map((service) => (
						<article class="card">
							<h3>{service.title}</h3>
							<p>{service.description}</p>
						</article>
					))}
				</div>
			</section>

			<section class="section">
				<h2>Projetos selecionados</h2>
				<div class="card-grid">
					{projects.map((project) => (
						<article class="card outline">
							<h3>{project.title}</h3>
							<p>{project.detail}</p>
						</article>
					))}
				</div>
			</section>

			<section id="contato" class="section contact">
				<h2>Contato</h2>
				<p>
					Quer um time que entregue rápido e com qualidade? Me chama e vamos planejar o próximo
					lançamento.
				</p>
				<a class="button primary" href="mailto:paulo@email.com">paulo@email.com</a>
			</section>
		</main>
		<Footer />
	</body>
</html>
