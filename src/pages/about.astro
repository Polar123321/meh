---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/about.css';

const profile = {
	name: 'Paulo Ferreira',
	title: 'Desenvolvedor Front-end & UI',
	location: 'São Paulo, Brasil',
	summary:
		'Crio interfaces rápidas, acessíveis e bonitas. Trabalho com Astro, React e design systems leves para entregar produtos que funcionam e encantam.'
};

const highlights = [
	{ label: '5+ anos', value: 'Experiência' },
	{ label: '18', value: 'Projetos entregues' },
	{ label: '3', value: 'Prêmios e menções' }
];

const skills = [
	'JavaScript / TypeScript',
	'Astro & React',
	'CSS moderno / Tailwind',
	'Figma & Design Systems',
	'Performance Web',
	'Acessibilidade'
];

const projects = [
	{
		name: 'Vitrine Aurora',
		description:
			'E-commerce headless com catálogo dinâmico, busca instantânea e checkout otimizado para conversão.',
		stack: ['Astro', 'Stripe', 'Cloudflare'],
		link: '#'
	},
	{
		name: 'Nimbus Studio',
		description:
			'Landing page modular para SaaS, com CMS e animações discretas de entrada.',
		stack: ['Astro', 'React', 'Content Collections'],
		link: '#'
	},
	{
		name: 'Atlas Insights',
		description:
			'Dashboard de dados com filtros rápidos, exportação e gráficos responsivos.',
		stack: ['TypeScript', 'D3', 'API REST'],
		link: '#'
	}
];

const timeline = [
	{
		period: '2023 - Atual',
		role: 'Front-end Lead · Orbital Labs',
		details: 'Guiando squad de produto, criando design system e melhorando o tempo de carregamento em 45%.'
	},
	{
		period: '2020 - 2023',
		role: 'UI Engineer · Lumen Studio',
		details: 'Projetos para fintechs e e-commerces, com foco em performance e experiência do usuário.'
	}
];

const socials = [
	{ name: 'GitHub', handle: '@paulo', link: '#' },
	{ name: 'LinkedIn', handle: '/in/paulo', link: '#' },
	{ name: 'Email', handle: 'paulo@email.com', link: 'mailto:paulo@email.com' }
];
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<BaseHead title="Portfólio | Paulo Ferreira" description={profile.summary} />
	</head>
	<body>
		<Header />
		<main class="portfolio">
			<section class="section hero">
				<div class="hero-content">
					<p class="eyebrow">Disponível para novos projetos</p>
					<h1>{profile.name}</h1>
					<p class="title">{profile.title}</p>
					<p class="summary">{profile.summary}</p>
					<div class="cta">
						<a class="button primary" href="#contato">Vamos conversar</a>
						<a class="button ghost" href="#projetos">Ver projetos</a>
					</div>
				</div>
				<div class="hero-card">
					<div>
						<p class="label">Localização</p>
						<p class="value">{profile.location}</p>
					</div>
					<div class="highlights">
						{highlights.map((item) => (
							<div class="highlight">
								<span class="value">{item.value}</span>
								<span class="label">{item.label}</span>
							</div>
						))}
					</div>
				</div>
			</section>

			<section class="section split" aria-labelledby="skills">
				<div class="section-header">
					<p class="section-label">Expertise</p>
					<h2 id="skills">Competências</h2>
					<p class="section-subtitle">
						Equilíbrio entre design e engenharia para criar produtos consistentes e fáceis de manter.
					</p>
				</div>
				<ul class="chip-list">
					{skills.map((skill) => (
						<li>{skill}</li>
					))}
				</ul>
			</section>

			<section id="projetos" class="section" aria-labelledby="projects">
				<div class="section-header">
					<p class="section-label">Seleção</p>
					<h2 id="projects">Projetos em destaque</h2>
					<p class="section-subtitle">
						Casos reais com foco em produto, performance e conversão.
					</p>
				</div>
				<div class="cards">
					{projects.map((project) => (
						<article class="card">
							<h3>{project.name}</h3>
							<p>{project.description}</p>
							<ul class="tag-list">
								{project.stack.map((tag) => (
									<li>{tag}</li>
								))}
							</ul>
							<a class="link" href={project.link}>
								Ver case
							</a>
						</article>
					))}
				</div>
			</section>

			<section class="section split" aria-labelledby="timeline">
				<div class="section-header">
					<p class="section-label">Jornada</p>
					<h2 id="timeline">Experiência</h2>
					<p class="section-subtitle">
						Times e projetos onde atuei criando produtos digitais escaláveis.
					</p>
				</div>
				<div class="timeline">
					{timeline.map((item) => (
						<div class="timeline-item">
							<p class="period">{item.period}</p>
							<h3>{item.role}</h3>
							<p>{item.details}</p>
						</div>
					))}
				</div>
			</section>

			<section id="contato" class="section contact" aria-labelledby="contact-title">
				<div class="section-header">
					<p class="section-label">Contato</p>
					<h2 id="contact-title">Vamos tirar o próximo projeto do papel</h2>
					<p class="section-subtitle">
						Quer um time que entregue rápido e com qualidade? Me chama e vamos planejar o próximo
						lançamento.
					</p>
				</div>
				<div class="contact-grid">
					{socials.map((item) => (
						<a class="contact-card" href={item.link}>
							<span class="label">{item.name}</span>
							<span class="value">{item.handle}</span>
						</a>
					))}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
